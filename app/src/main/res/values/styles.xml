<resources>

    <!-- ============================================ -->
    <!-- BUTTON STYLES -->
    <!-- ============================================ -->

    <!-- Base button style with outline design -->
    <style name="ConversionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Outline button style (alias for consistency) -->
    <style name="ConversionButton.Outline" parent="ConversionButton" />


    <!-- ============================================ -->
    <!-- THEMES -->
    <!-- ============================================ -->

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorBackground">#FFFFFF</item>
        <item name="colorOnBackground">#555555</item>
        <item name="buttonStyle">@style/ConversionButton.Outline</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorBackground">#121212</item>
        <item name="colorOnBackground">#CCCCCC</item>
        <item name="buttonStyle">@style/ConversionButton.Outline</item>
    </style>

    <!-- Theme with background image -->
    <style name="AppTheme.WithBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/theme_background</item>
        <item name="colorBackground">@drawable/theme_background</item>
        <item name="colorPrimary">#964B00</item>
        <item name="colorAccent">#FF4081</item>
        <item name="buttonStyle">@style/ConversionButton.Outline</item>
    </style>
    

</resources>